<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/app_font</item>

        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>

        <item name="colorControlNormal">?android:textColorPrimary</item>

        <item name="preferenceTheme">@style/AppPreferenceTheme</item>

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.AppTheme.LargeComponent
        </item>
        <item name="shapeAppearanceMediumComponent">
            @style/ShapeAppearance.AppTheme.MediumComponent
        </item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.AppTheme.SmallComponent
        </item>

        <item name="motionInterpolatorPersistent">@android:interpolator/fast_out_slow_in</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/light_status</item>
    </style>

    <style name="DankSeparator">
        <item name="android:background">?android:textColorSecondary</item>
    </style>

    <style name="DankSeparator.VerticalContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DankSeparator.HorizontalContent">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="DankTextFormatToolbarButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:padding">12dp</item>
        <item name="tint">?android:textColorPrimary</item>
    </style>

    <!-- Custom Preference Theme -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceThemeOverlay.v14.Material">
        <item name="preferenceFragmentCompatStyle">
            @style/AppPreferenceFragmentCompatStyle
        </item>
    </style>

    <!-- Custom Style for PreferenceFragmentCompat -->
    <style name="AppPreferenceFragmentCompatStyle" parent="@style/PreferenceFragment.Material">
        <item name="android:layout">@layout/fragment_setting</item>
    </style>

    <style name="ShapeAppearance.AppTheme.LargeComponent" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>

    <style name="ShapeAppearance.AppTheme.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>


    <style name="Widget.AppTheme.JournalImageView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8%</item>
        <item name="cornerSizeBottomRight">8%</item>
        <item name="cornerSizeBottomLeft">2%</item>
        <item name="cornerSizeTopLeft">2%</item>
    </style>

    <style name="Widget.AppTheme.ToolbarTitle" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

</resources>
